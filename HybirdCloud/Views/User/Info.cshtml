
@{
    ViewBag.Title = "User Info";
    UserInfo userInfo = ViewBag.user;
}

<section class="shop_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                User Info
            </h2>
        </div>


        <div class="box">
            <a href="~/User/EditInfo">
            <div class="new">
                <span>
                    Edit
                </span>
            </div>
            </a>
            <center>
                <div class="img-box" style="width:200px;height:200px;">
                    <img src='data:image;base64,@Session["Image"]' alt="個人頭像">
                </div>
            </center>
            <div class="row" style="font-size:20px;">
                <div class="col-sm-6"><strong>UserName: </strong> <var>@Session["Account"] </var></div>
                <div class="col-sm-6"><strong>Gender: </strong> <var>@Session["Gender"]</var></div>
                <div class="col-sm-6"><strong>Email: </strong> <var>@Session["Email"]</var></div>
                <div class="col-sm-6"><strong>Contact Number: </strong> <var>@Session["PhoneNumber"]</var></div>
                <div class="col-sm-6"><strong>Accoun Type: </strong> <var>@Session["AccountType"]</var></div>
                <div class="col-sm-6"><strong>Wallet: </strong> <var>$@Session["Wallet"]</var></div>
            </div>
        </div>
            


    </div>
    </section>
