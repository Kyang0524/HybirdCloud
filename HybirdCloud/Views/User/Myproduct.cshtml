
@{
    ViewBag.Title = "Myproduct";
    List<ItemInfo> items = ViewBag.Myproduct;
}

<section class="shop_section layout_padding">
    <div class="container">

        <div class="heading_container heading_center">
            <h2>
                My Product
            </h2>
        </div>
        <div class="row">
            @foreach (ItemInfo item in items)
            {
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="box">
                        <a href="~/Home/ProductDetail?ItemName=@item.ItemName&ItemUploader=@item.ItemUploader">
                            <div class="img-box">
                                <img src='data:image;base64,@Convert.ToBase64String(item.ItemImage)' alt="">
                            </div>
                            <div class="detail-box">
                                <h6>
                                    @item.ItemName
                                </h6>
                            </div>
                        </a>
                    </div>
                </div>
            }

        </div>
    </div>
</section>